<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xavier.smartcampusdemo" >
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <application
        android:name=".activity.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BaseActivity" >
        </activity>
        <activity
            android:name=".activity.SignInActivity">
        </activity>
        <activity
            android:name=".activity.SignUpActivity">
        </activity>
        <activity
            android:name=".activity.ForumsDetailsActivity">
        </activity>
        <activity
            android:name=".activity.VideoDetailsActivity">
        </activity>
        <activity
            android:name=".activity.BlogDetailsActivity">
        </activity>
        <activity
            android:name=".activity.ForumPublishActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
        </activity>
        <activity
            android:name=".activity.VideoPublishActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
        </activity>
        <activity
            android:name=".activity.BlogPublishActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
        </activity>
    </application>


</manifest>