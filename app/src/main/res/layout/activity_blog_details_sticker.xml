<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blog_reply_sticker"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#FEFEFE"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">
    <RelativeLayout
        android:id="@+id/blog_details_comment_holder"
        android:layout_weight="1.0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/blog_details_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#F46200"
            android:text="回复"/>
        <TextView
            android:id="@+id/blog_details_comment_count"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/blog_details_comment"
            android:layout_toEndOf="@id/blog_details_comment"
            android:textSize="20sp"
            android:textColor="#333333"
            android:text=""/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/blog_details_like_holder"
        android:layout_weight="1.0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/blog_details_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#F46200"
            android:text="赞"/>
        <TextView
            android:id="@+id/blog_details_like_count"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/blog_details_like"
            android:layout_toEndOf="@id/blog_details_like"
            android:textSize="20sp"
            android:textColor="#333333"
            android:text="" />
    </RelativeLayout>
</LinearLayout>