<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/forum_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text=""
        android:textSize="25sp" />

    <TextView
        android:id="@+id/forum_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text=""
        android:textColor="#232323"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/forum_details_img_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:id="@+id/forum_details_img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:viewAspectRatio="1.33"
            android:contentDescription=""
            android:visibility="gone"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:padding="10dp"
            android:id="@+id/forum_details_img2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:viewAspectRatio="1.33"
            android:contentDescription=""
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:id="@+id/forum_details_img3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:viewAspectRatio="1.33"
            android:contentDescription=""
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>